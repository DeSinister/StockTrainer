<h1>My List</h1>


<br>
<div class="row">
  <div class="col-10 col-9-md col-10-xs nopad">
    <table class="table table-striped table-dark table-hover">
      <thead>
        <tr>
          <th scope="col">Sno.</th>
          <th scope="col">Ticker</th>
          <th scope="col">Name</th>
          <th scope="col">Stock Price</th>
          <th scope="col">Quantity</th>
          <th scope="col">Total</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% r = 1 %>
        <% investment = 0%>
        <% @tracked_stocks.each do |stock| %>
          <% us = UserStock.where(user: @user, stock: stock).first%>
          <%if us.quantity > 0 %>
            <tr>
              <td scope = "row"><%= r %></td>
              <th scope="row"><%=stock.ticker%></th>
              <td><%=stock.name%></td>
              <td>
                <%if stock.change > 0 %>
                  <div class="green">
                    <%=stock.last_price%> <%= fa_icon "sort-up"%> <%=stock.change%>
                  </div>
                <%elsif stock.change < 0%>
                  <div class="red">
                    <%=stock.last_price%> <%= fa_icon "sort-desc"%> <%=stock.change%>
                  </div>
                <%else%>
                <div class="yellow">
                  <%=stock.last_price%>
                </div>
                <%end%>
              </td>
              <td><%=us.quantity%></td>
              <%investment += us.cprice%>
              <td><%=us.cprice%></td>
              <td>
                <%= link_to 'Buy', user_stock_path(stock, act: "Buy"), class: 'btn btn-sm same btn-light mb mt'%>&nbsp;
                <%= link_to 'Sell', user_stock_path(stock, act: "Sell"), class: 'btn btn-sm same btn-secondary mt mb'%>
              </td>
            </tr>
          <%end%>
      <% end %>
      </tbody>
    </table>
    <hr>

    <strong>Total Investment: <%=investment%> $</strong>

  </div>
</div>
