<h2>User Details</h2>


<div class="card card-header results-block">
  <table class="col-md-12">
    <tbody>
      <tr>
        <td><strong>Name: </strong> <%= @user.full_name %></td>
        <td><strong>Email: </strong> <%= @user.email %></td>
        <td>
          <% if current_user.not_friends_with?(@user.id) %>
            &nbsp;&nbsp;
            <%= link_to friendships_path(friend: @user), class: "btn btn-sm btn-success", method: :post do %>
                <%= fa_icon "user-plus"%> Make a Friend?
            <%end%>
          <% else %>
            <span class="badge badge-secondary">
              You are friends
            </span>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<br>
<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list', opt: false%>
<% else %>
  <p class='lead'>This user is not tracking any stocks</p>
<% end %>
<%= link_to 'Back', my_friendlist_path, class: "btn btn-primary" %>
