<div class="row">
  <div class="col-9 col-10 col-9-md col-10-xs">
    <table class="table table-striped table-dark table-hover">
      <thead>
        <tr>
          <th scope="col">Sno.</th>
          <th scope="col">Ticker</th>
          <th scope="col">Name</th>
          <th scope="col">Last Price</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% r = 1 %>
        <% @tracked_stocks.each do |stock| %>
          <tr>
            <td scope = "row"><%= r %></td>
            <th scope="row"><%=stock.ticker%></th>
            <td><%=stock.name%></td>
            <td><%=stock.last_price%></td>
            <td>
              <% if current_user.can_track_stock?(stock.ticker) %>
                <%= link_to 'Add to Portfolio', user_stocks_path(user: current_user, ticker: stock.ticker), class: "btn btn-xs btn-dark", method: :post %>
              <%elsif current_user.id != @user.id%>
              <span class = "badge badge-secondary">
                You are already tracking
                <%if !current_user.under_stock_limit? %>
                  at max limit
                <%end%>

                <%if current_user.already_stock?(stock.ticker) %>
                  this stock
                <%end%>
                </span>
              <% end %>
              <%= link_to 'Buy', user_stock_path(stock, act: "Buy"), class: 'btn same1 btn-sm btn-light mb mt'%>
              <%= link_to 'Sell', user_stock_path(stock, act: "Sell"), class: 'btn same1 btn-sm btn-secondary mt mb'%>

              <% if current_user.id == @user.id %>
                <% us = UserStock.where(user: @user, stock: stock).first%>
                <%if us.quantity > 0%>
                  <%= link_to 'Remove', user_stock_path(stock), method: :delete, data: {confirm: 'Are you sure.?'}, class: 'btn same1 btn-warning btn-sm mb mt' %>
                <%else%>
                  <%= link_to 'View', my_list_path, class: 'btn  btn-warning btn-sm mb mt same1'%>
                <%end%>

              <%end%>
            </td>
            <%r+=1%>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
